public class Solution {
    public int arraySign(int[] nums) {
        int product = 1;
        for (int i = 0; i < nums.length; i++) {
            int num = nums[i];
            if (num == 0) {
                return 0;
            } else {
                if (num > 0) {
                    product *= 1;
                } else {
                    product *= -1;
                }
            }
        }
        return product;
    }
}
